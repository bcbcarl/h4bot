{
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": [
    "node",
    "optimize-regex",
    "promise",
    "security"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:security/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "optimize-regex/optimize-regex": "error",
    "promise/prefer-await-to-then": "error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
